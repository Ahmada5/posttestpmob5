<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="volume"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/background1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"

        android:text="VOLUME LIMAS SEGI EMPAT"
        android:fontFamily="@font/trade_winds"
        android:textColor="@color/blue1"
        android:textSize="30dp"
        android:background="@drawable/bg1"
        />
    <TextView
        android:id="@+id/resultvol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:hint="YOUR RESULT"
        android:textSize="30dp"
        android:textColorHint="@color/blue2"
        android:textColor="@color/blue2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg1"
        />

    <EditText
        android:id="@+id/sisi1"
        android:inputType="number"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="panjang sisi alas"
        android:fontFamily="@font/trade_winds"
        android:background="@drawable/bg1"
        android:layout_marginTop="490dp"
        android:textColorHint="@color/pink"
        android:textColor="@color/blue2"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/sisi2"
        android:inputType="number"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="lebar sisi alas"
        android:fontFamily="@font/trade_winds"
        android:background="@drawable/bg1"
        android:layout_marginTop="550dp"
        android:textColorHint="@color/pink"
        android:textColor="@color/blue2"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/tinggi"
        android:inputType="number"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="tinggi limas"
        android:fontFamily="@font/trade_winds"
        android:background="@drawable/bg1"
        android:layout_marginTop="610dp"
        android:textColorHint="@color/pink"
        android:textColor="@color/blue2"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"

        android:fontFamily="@font/trade_winds"
        android:textColor="@color/blue2"
        android:background="@drawable/bg1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        />


</RelativeLayout>